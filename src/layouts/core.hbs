<!-- Fixed navbar -->
<nav class="navbar navbar-default">
<div class="container">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="{{project.url}}">{{project.name}}</a>
  </div>
  <div id="navbar" class="collapse navbar-collapse navbar-right">
    <ul class="nav navbar-nav">
      {{#each  menu}}
        {{#if submenu}}
          <li class="dropdown{{#is ../../active_menu ../title}} active{{/is}}">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{title }} <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              {{#each submenu}}
                <li><a href="{{url}}">{{title }}</a></li>
              {{/each }}
            </ul>
          </li>
        {{else}}
          <li {{#is ../../active_menu title}}class="active"{{/is}}><a href="{{url}}">{{title }}</a></li>
        {{/if}}
      {{/each }}

    </ul>


  </div><!--/.nav-collapse -->
</div>
</nav>
